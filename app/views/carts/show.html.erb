<p id="notice" class="w3-panel"><%= notice %></p>

<div class="w3-panel w3-light-blue">
<div>
	&nbsp
	</div>
<table class="w3-table-all">
<thead>
	<tr><th><h1>Cart</h1></th><th></th><th></th></tr>
  <tr>
		<th>Quantity</th>
		<th>Product</th>
		<th>Price</th>
  </tr>
</thead>
<tbody>
<tr>
 <% @cart.line_items.each do |item| %>
    <tr>
    	<td><%= item.quantity %> &times; </td>
			<td><%= item.product.title %></td>
			<td><%= number_to_currency(item.total_price) %></td>
    </tr>
    <% end %>
    <tr>
    <td colspan="2">Total Order Value </td><td><%= number_to_currency(@cart.total_price) %></td>
    </tr>
	<tr>
			<td><%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<td></td>
			<td></td>
		</tr>
</tbody>
</table>
	<div class="w3-bar">
	<%= link_to 'Continue Shopping!', store_index_url , class:"btn btn-primary w3-right" %>

	</div>
</div>
