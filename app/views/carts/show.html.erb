<p id="notice" class="w3-panel"><%= notice %></p>

<div class="w3-panel w3-light-blue">

<table class="w3-table-all">
<thead>
  <tr>
		<th><h1>Cart</h1></th>
		<th><br><br><br>Price</th>
  </tr>
</thead>
<tbody>
<tr>
<% @cart.line_items.each do |item| %>
<tr>
<td>
	<%= item.product.title %></td>
   <td>
	<%= number_to_currency(item.product.price) %>
	<% end %></td>
</tr>
</tbody>
</table>
<div class="w3-bar w3-light-blue">
 <a href="/" class="w3-right w3-button"> Continue Shopping! ></a>
</div>
</div>
